<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtMoney"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtMoney3"
        android:layout_width="252dp"
        android:layout_height="43dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtMoney2"
        android:layout_width="251dp"
        android:layout_height="38dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radG"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="212dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rad13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkbtn"
            android:text="Chu Vi" />

        <RadioButton
            android:id="@+id/rad15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkbtn"
            android:text="Diện Tích"
            tools:layout_editor_absoluteX="26dp" />

    </RadioGroup>

    <Button
        android:id="@+id/btntip"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="74dp"
        android:text="Kết Quả"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radG" />

    <TextView
        android:id="@+id/ViewTip"
        android:layout_width="222dp"
        android:layout_height="86dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="96dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntip" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="7dp"
        android:text="Dài"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/edtMoney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:text="Rộng"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/edtMoney2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="7dp"
        android:text="Cao"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/edtMoney3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>